<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carme.tenis.MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Puntuacion"
        android:textSize="30sp"
        android:textColor="#00FF00"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/jugador1_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/jugador2_titulo"
        android:layout_alignBottom="@+id/jugador2_titulo"
        android:layout_toLeftOf="@+id/titulo"
        android:layout_toStartOf="@+id/titulo"
        android:text="Jugador 1"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/jugador2_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"

        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/titulo"
        android:layout_toRightOf="@+id/titulo"
        android:text="Jugador 2"
        android:textSize="20sp" />




</>
